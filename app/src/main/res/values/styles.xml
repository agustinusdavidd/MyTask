<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditText.Style" parent="@android:style/Widget.EditText">
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="DatePicker.Theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:headerBackground">@color/black</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="AppBar.Theme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>
</resources>